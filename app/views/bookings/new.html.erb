<h1>New Booking</h1>


<%= form_for @booking do |f| %>
    <%= f.fields_for :passengers do |p| %>
    		<div class="container">
				<div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
					   <span class="input-group-btn">
        <%= p.label :name %>
        <%= p.text_field :name, class: "input-group form-control border-radius", placeholder: "Name" %>
        						</span>
					</div><!-- /input-group -->
		</div>
        <br>
            		<div class="container">
				<div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
					   <span class="input-group-btn">
        <%= p.label :email %>
        <%= p.text_field :email,  class: "input-group form-control border-radius", placeholder: "Email"  %>
                						</span>
					</div><!-- /input-group -->
		</div>
    <% end %>
    <br>

<div class="container">
				<div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
					   <span class="input-group-btn">
    <%= f.hidden_field "flight_id", value: params[:selected] %>
    <%= f.submit "Book flight", class: "btn btn-default border-radius custom-button" %>
                						</span>
					</div><!-- /input-group -->
		</div    
<% end %>


