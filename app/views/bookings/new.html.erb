<h1>New Booking</h1>


<%= form_for @booking do |f| %>
    <%= f.fields_for :passengers do |p| %>
        <%= p.label :name %>
        <%= p.text_field :name %>
        <br>
        <%= p.label :email %>
        <%= p.text_field :email %>
    <% end %>
    <br>
    <%= f.hidden_field "flight_id", value: params[:selected] %>
    <%= f.submit "Book flight" %>
<% end %>